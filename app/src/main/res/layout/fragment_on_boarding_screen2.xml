<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.authentication.onboarding.screens.OnBoardingScreen2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/onBoardingScreen2ImageView"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_treeo_value" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/onBoardingScreen2TitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/step_2_know_the_value_of_your_trees"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:textColor="@color/app_green"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingScreen2ImageView" />

        <View
            android:id="@+id/view"
            android:layout_width="150dp"
            android:layout_height="4dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/line_drawable"
            app:layout_constraintStart_toStartOf="@+id/onBoardingScreen2TitleTV"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingScreen2TitleTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/onBoardingScreen2TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/get_to_know_the_value_of_your_timber_with_our_app_and_sell_your_timber_for_a_fair_market_price"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <LinearLayout
            android:id="@+id/llUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onBoardingScreen2TextView">

            <android.widget.Button
                android:id="@+id/onBoardingScreen2BackButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.3"
                android:background="@drawable/back_button_state_list"
                android:drawableStart="@drawable/ic_arrow_back_16"
                android:paddingStart="12dp"
                android:paddingEnd="14dp"
                android:text="@string/back_1_4"
                android:textColor="@color/app_green"
                android:textSize="14sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="0dp" />

            <android.widget.Button
                android:id="@+id/onBoardingScreen2ContinueButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.3"
                android:background="@drawable/button_state_list"
                android:drawableEnd="@drawable/ic_arrow_forward_16"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/next_3_4"
                android:textColor="@color/text_color_state_list"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
