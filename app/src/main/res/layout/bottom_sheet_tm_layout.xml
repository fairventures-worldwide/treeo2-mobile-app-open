<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/modal_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/one_tree_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:padding="15dp"
            android:text="@string/_1_tree_measurement"
            android:textColor="@color/app_green"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_single_tree" />

        <View
            android:id="@+id/line_1"
            android:layout_width="280dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/gray_3"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/whole_field_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:padding="15dp"
            android:src="@drawable/whole_field_modal"
            android:text="@string/whole_field"
            android:textColor="@color/app_green"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_forest" />
    </LinearLayout>
</LinearLayout>
